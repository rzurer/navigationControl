extends layout 
block content
	.navigatorContainer
		input#navigateFirst(type='image', src='/images/first.png')
		input#navigatePrevious(type='image', src='/images/previous.png')
		input#navigateNext(type='image', src='/images/next.png')
		input#navigateLast(type='image', src='/images/last.png')
		input#removeCurrent(type='image', src='/images/remove.png')
	.controlsContainer
		label Set Source Array Length: 
		select#setSourceArraySelect
			option 0
			option 1
			option 2
			option 3
			option 4
			option 5
		label Current Index:
		label#currentIndexOutput.output
		label Source Array Length:
		label#sourceArrayLengthOutput.output
	script
		initializeNavigator();